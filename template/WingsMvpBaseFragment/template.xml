<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="Wings MvpBaseFragment(Java)"
    minApi="16"
    minBuildApi="16"
    description="Creates a new MvpBaseFragment">

    <category value="Fragment" />

    <parameter
        id="uiClassName"
        name="Class Name"
        type="string"
        constraints="class|nonempty|unique"
        default="AppFragment"
        help="The name of the fragment class to create" />

    <parameter
        id="generateLayout"
        name="Create layout XML?"
        type="boolean"
        default="true"
        help="Generate a layout XML for the fragment" />
		
    <parameter
        id="layoutName"
        name="Fragment Layout Name"
        type="string"
        constraints="layout|nonempty|unique"
        default="fragment_app"
        visibility="generateLayout"
        suggest="fragment_${classToResource(uiClassName)}"
        help="The name of the layout to create" />
		
    
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
