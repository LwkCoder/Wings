<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lwkandroid.demo.rxhttp.RxHttpActivity">

    <com.lwkandroid.widget.comactionbar.ComActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bg_color="@color/actionbar"
        app:is_left_as_back="true"
        app:title_text="网络请求示例" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <com.lwkandroid.lib.common.widgets.view.RTextView
                android:id="@+id/btn_rxhttp_01"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="@dimen/spacing_small"
                android:text="模拟未登录情况下的请求"
                app:border_color_normal="@color/actionbar"
                app:border_width_normal="1dp"
                app:corner_radius="@dimen/spacing_small"
                app:ripple="true"
                app:ripple_color="@color/gray_lighter"
                app:text_color_normal="@color/actionbar" />

            <com.lwkandroid.lib.common.widgets.view.RTextView
                android:id="@+id/btn_rxhttp_02"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="@dimen/spacing_small"
                android:text="模拟自动刷新AccessToken"
                app:border_color_normal="@color/actionbar"
                app:border_width_normal="1dp"
                android:layout_marginTop="@dimen/spacing_normal"
                app:corner_radius="@dimen/spacing_small"
                app:ripple="true"
                app:ripple_color="@color/gray_lighter"
                app:text_color_normal="@color/actionbar" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
