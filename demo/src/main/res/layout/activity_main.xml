<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lwkandroid.demo.MainActivity">

    <com.lwkandroid.widget.comactionbar.ComActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bg_color="@color/actionbar"
        app:title_text="@string/app_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <com.lwkandroid.lib.common.widgets.view.RTextView
                android:id="@+id/btn_main_01"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="@dimen/spacing_small"
                android:text="网络请求示例"
                app:border_color_normal="@color/actionbar"
                app:border_width_normal="1dp"
                app:corner_radius="@dimen/spacing_small"
                app:ripple="true"
                app:ripple_color="@color/gray_lighter" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
