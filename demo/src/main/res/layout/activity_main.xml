<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lwkandroid.demo.MainActivity">

    <com.lwkandroid.widget.comactionbar.ComActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bg_color="@color/actionbar"
        app:title_text="@string/app_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <com.lwkandroid.lib.common.widgets.view.RTextView
                android:id="@+id/btn_main_01"
                style="@style/NormalButtonStyle"
                android:layout_width="match_parent"
                android:text="网络请求示例"
                app:background_normal="@color/white"
                app:border_color_normal="@color/actionbar"
                app:border_width_normal="1dp" />

            <com.lwkandroid.lib.common.widgets.view.RTextView
                android:id="@+id/btn_main_02"
                style="@style/NormalButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="PopupWindow工具示例"
                app:background_normal="@color/white"
                app:border_color_normal="@color/actionbar"
                app:border_width_normal="1dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
