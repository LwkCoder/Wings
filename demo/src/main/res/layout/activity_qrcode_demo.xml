<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <TextView
            android:id="@+id/tv_qrcode_demo_label"
            style="@style/MediumTextStyle"
            android:text="二维码内容:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/ed_qrcode_demo_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/bg_input"
            android:gravity="left|top"
            android:padding="@dimen/spacing_small"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_darker"
            android:textSize="@dimen/textsize_small"/>

        <Button
            android:id="@+id/btn_qrcode_demo_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫描二维码"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_normal"/>

        <Button
            android:id="@+id/btn_qrcode_demo_parse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="识别相册二维码图片"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_normal"/>

        <Button
            android:id="@+id/btn_qrcode_demo_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="复制输入框内二维码内容"/>

        <Button
            android:id="@+id/btn_qrcode_demo_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建输入框内二维码图片"/>

        <ImageView
            android:id="@+id/img_qrcode_demo_result"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>