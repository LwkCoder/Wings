<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context=".project.state.StateActivity">

    <com.lwkandroid.widget.comactionbar.ComActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bg_color="@color/deep_darker"
        app:is_left_as_back="true"
        app:title_text="StateFrameLayoutTest"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_request_empty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="模拟Empty"/>

        <Button
            android:id="@+id/btn_request_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="模拟NetError"/>

        <Button
            android:id="@+id/btn_request_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="模拟Content"/>

    </LinearLayout>

    <com.lwkandroid.widget.StateFrameLayout
        android:id="@+id/sfl_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyLayoutResId="@layout/layout_empty_state"
        app:loadingLayoutResId="@layout/layout_loading_state"
        app:netErrorLayoutResId="@layout/layout_error_state">

        <TextView
            android:id="@+id/tv_state_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Content"
            android:textColor="@color/deep_darker"
            android:textSize="@dimen/text_size_large"/>

    </com.lwkandroid.widget.StateFrameLayout>

</LinearLayout>